<h1>Showing results for '{{name}}':</h1>
<div class="artists">
  {{#each artists}}
    <div class="artist">
      <div class="data">
        <img {{#if images.length}} src="{{images.0.url}}" {{/if}}/>
        <div class="text">
          <h3>{{name}}</h3>
          <a href="/albums/{{id}}_{{name}}">View Albums</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>